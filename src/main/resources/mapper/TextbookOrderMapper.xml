<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.graduation.mapper.TextbookOrderMapper">

    <resultMap id="BaseResultMap" type="com.chen.graduation.beans.PO.TextbookOrder">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="approvalId" column="approval_id" jdbcType="BIGINT"/>
            <result property="supplierId" column="supplier_id" jdbcType="BIGINT"/>
            <result property="state" column="state" jdbcType="SMALLINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,approval_id,supplier_id,
        state,create_time,update_time,
        is_deleted
    </sql>
    <select id="queryTextbookIdAndGradeNumberByApprovalId" resultType="com.chen.graduation.beans.TextbookIdsAndGradePeople">
        select tb_approval.textbook_ids                                                                                 as textbook_ids,
               (select count(tb_user.id)
                from tb_user
                where top.grade_id = tb_user.grade_id
                  and tb_user.is_deleted = 0)                                                                           as grade_people
        from tb_approval
                 left join tb_opening_plan top on top.id = tb_approval.opening_plan_id
        where tb_approval.id = #{approvalId}
          and tb_approval.is_deleted = 0
          and top.is_deleted = 0
    </select>
</mapper>
